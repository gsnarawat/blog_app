



 <%= form_for ([@post, @post.comments.build]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
	<%= f.text_field :contents, placeholder: "Your comment here..." %>
   
  </div>
  <%= f.submit "Comment", class: "btn btn-large btn-primary" %>
<% end %>