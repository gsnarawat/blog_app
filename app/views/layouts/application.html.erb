<!DOCTYPE html>
<html>
<head>
  <title>BLOG_lab</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>

<%= link_to image_tag("logo.png", :alt => "rss feed", :height => "10%" , :width => "10%"), root_path %>
<%= render 'layouts/header' %>

<div class="container">


<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <%= yield %>
</div>
	<%= render 'layouts/footer' %>
</body>
</html>
